<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:lab6_starter="clr-namespace:Lab6_Starter"
             xmlns:sensors="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials"
             x:DataType="lab6_starter:Map"
             x:Class="Lab6_Starter.Map"
             Title="Map">    
        <maps:Map ItemsSource="{Binding AirportPin}">
        <x:Arguments>
            <MapSpan>
                <x:Arguments>
                    <sensors:Location>
                        <x:Arguments>
                            <x:Double>44.67718</x:Double>
                            <x:Double>-89.62513</x:Double>
                        </x:Arguments>
                    </sensors:Location>
                    <x:Double>7.0</x:Double>
                    <x:Double>7.0</x:Double>
                </x:Arguments>
            </MapSpan>
        </x:Arguments>
            <maps:Map.ItemTemplate>
                <DataTemplate>
                    <maps:Pin Location="{Binding AirportLocation}"
                              Address="{Binding Facility}"
                              Label="{Binding AirportName}" />
                </DataTemplate>    
            </maps:Map.ItemTemplate>
        </maps:Map>
</ContentPage>